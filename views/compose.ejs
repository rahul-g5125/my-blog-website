<%- include("partials/header") %> 

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" id="title">
    </div>
    <div class="mb-3">
        <label class="form-label" for="content">Post</label>
        <textarea class="form-control" name="postBody" id="content" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" name="" type="submit">Publish</button>
</form>

